generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL_POSTGRES_POOLER")
  directUrl = env("DATABASE_URL_POSTGRES")
}

model User {
  id               String     @id @default(cuid())
  authId           String?    @unique @map("auth_id") // Supabase Auth user ID
  email            String     @unique
  password         String?    // Optional now, as Supabase handles auth
  role             String     @default("USER")
  subscriptionTier String     @default("FREE")
  billingCycle     String     @default("MONTHLY")
  lastReset        DateTime   @default(now())
  createdAt        DateTime   @default(now())
  documents        Document[]
  usage            Usage[]
  feedback         Feedback[]
  createdDesigns   DesignTemplate[] @relation("DesignTemplateCreatedBy")
}

model Template {
  id               String     @id @default(cuid())
  name             String
  type             String
  structure        String
  version          Int        @default(1)
  supportedFormats String     @default("DOCX,PDF,XLSX")
  isActive         Boolean    @default(true)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  documents        Document[]
}

model Document {
  id         String   @id @default(cuid())
  userId     String
  templateId String
  content    String
  metadata   String
  fileUrl    String
  format     String
  status     String   @default("COMPLETED")
  tags       String?
  isFavorite Boolean  @default(false)
  tone       String?
  designTemplateId String?
  createdAt  DateTime @default(now())
  template   Template @relation(fields: [templateId], references: [id])
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  designTemplate DesignTemplate? @relation(fields: [designTemplateId], references: [id], onDelete: SetNull)
  usage      Usage[]

  @@index([userId])
  @@index([templateId])
  @@index([designTemplateId])
}

model Usage {
  id         String   @id @default(cuid())
  userId     String
  documentId String
  tokensUsed Int
  aiProvider String
  createdAt  DateTime @default(now())
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([documentId])
}
model Feedback {
  id        String   @id @default(cuid())
  userId    String
  type      String   // "ERROR" or "SUGGESTION"
  title     String
  content   String
  status    String   @default("PENDING") // "PENDING", "IN_PROGRESS", "RESOLVED"
  priority  String   @default("MEDIUM")  // "LOW", "MEDIUM", "HIGH"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model DesignTemplate {
  id            String     @id @default(cuid())
  name          String     @unique
  description   String?
  previewImage  String?
  targetFormats String     @default("DOCX,PDF")
  tokens        String
  isActive      Boolean    @default(true)
  isDefault     Boolean    @default(false)
  createdBy     String?
  createdByUser User?      @relation("DesignTemplateCreatedBy", fields: [createdBy], references: [id], onDelete: SetNull)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  documents     Document[]
}

model BrandSettings {
  id             String   @id @default("singleton")
  logoUrl        String?
  primaryColor   String   @default("#2563EB")
  secondaryColor String   @default("#4F46E5")
  fontHeading    String   @default("Inter")
  fontBody       String   @default("Roboto")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
